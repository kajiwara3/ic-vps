<% @title = "詳細表示" %>
<h1><%= @title %></h1>
<%= link_to "一覧に戻る", :admin_administrators %> | 
<%= link_to "編集する", [:edit, :admin, @administrator] %>
<table>
  <tr>
    <th>ID</th>
    <td><%= @administrator.id %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @administrator.name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @administrator.email %></td>
  </tr>
</table>
<%= link_to "削除する", [:admin, @administrator],
  method: :delete, confirm: "本当に削除しますか？"%>

