<% @page_title = "パートナーページトップ" %>
<% if !admin_administrator_signed_in? %>
  <%= link_to 'login', :new_admin_administrator_session %>
<% else %>
  <h2>未処理お問い合わせ</h2>
  <ul>
    <%= render @contacts %>
  </ul>
  <%= link_to "お問い合わせ一覧へ", :admin_contacts %>
  <br />
  <br />
  <h2>公開中のお知らせ</h2>
  <% if @notifications.size == 0 %>
    <p>お知らせはありません</p>
  <% else %>
    <%= render 'notifications' %>
  <% end %>
  <%= link_to "お知らせ一覧へ", :admin_notifications %>
<% end %>