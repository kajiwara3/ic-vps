<h3>ログイン</h3>
<% if flash.alert %>
  <p class="alert"><%= flash.alert %></p>
<% end %>
<%= form_tag :admin_session do %>
  <table id="login_form">
    <tr>
      <td align="left">ID</td>
      <td>
        <%= text_field_tag "email", "", style: "width: 120px" %>
      </td>
    </tr>
    <tr>
      <td align="left">Password</td>
      <td>
        <%= password_field_tag "password", "", style: "width: 120px" %>
      </td>
    </tr>
    <tr>
      <td colspan="2" align="center">
        <%= submit_tag "ログイン" %>
      </td>
    </tr>
  </table>
  <%= hidden_field_tag "from", request.path %>
<% end %>
