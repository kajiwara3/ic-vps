<h2>Sign up</h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form| %>
<%= render "shared/errors", obj: @partner%>
<table>
  <tr>
    <th><%= form.label :name %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :name_kana %></th>
    <td><%= form.text_field :name_kana %></td>
  </tr>
  <tr>
    <th><%= form.label :address %></th>
    <td><%= form.text_field :address %></td>
  </tr>
  <tr>
    <th><%= form.label :email %></th>
    <td><%= form.text_field :email %></td>
  </tr>
  <tr>
    <th><%= form.label :password %></th>
    <td><%= form.text_field :password %></td>
  </tr>
  <tr>
    <th><%= form.label :password_confirmation %></th>
    <td><%= form.text_field :password_confirmation %></td>
  </tr>
</table>
<% unless @partner.new_record? %>
  <p>
    パスワードを変更する場合のみパスワードを入力してください。
  </p>
<% end %>
  <div><%= form.submit "Sign up" %></div>


<%= render "devise/shared/links" %>

<% end %>